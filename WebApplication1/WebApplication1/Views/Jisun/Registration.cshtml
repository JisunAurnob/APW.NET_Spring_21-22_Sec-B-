@*@model WebApplication1.Models.Registration*@
@model WebApplication1.Models.Database.user
@{
    ViewBag.Title = "Registration";
}
<br />
<div class="container-lg col-8 border rounded">
    <div class="container col-11">
        <br />
        <h2>Registration</h2>
        <form class="row g-3" action="/Jisun/Registration" method="Post">

            <div class="col-md-6">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" name="Name" id="Name" placeholder="Your Name" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" name="Username" id="Username" placeholder="Username Which Is Needed For Login" />
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>


            <div class="col-12">
                <label for="Email" class="form-label">Email</label>
                <input type="text" class="form-control" name="Email" id="Email" placeholder="Your Email Address" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="col-12">
                <label for="Phone" class="form-label">Phone</label>
                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Your Personal Phone Number" />
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>

            <div class="col-12">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" name="Password" id="Password" placeholder="Give A Strong Password" />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="col-12">
                <label for="ConfirmPass" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" name="ConfirmPass" id="ConfirmPass" placeholder="Retype The Password" />
                @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
            </div>

            <div class="col-7">
                <label for="Dob" class="form-label">Date Of Birth</label>
                <input type="date" class="form-control" name="Dob" id="Dob" placeholder="Your Birthdate" />
                @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
            </div>

            <div class="col-5">
                <label for="Gender" class="form-label">Gender</label><br />
                <input type="radio" class="form-check-input" id="Male" name="Gender" value="Male" />
                <label for="Male">Male</label>&nbsp &nbsp
                <input type="radio" class="form-check-input" id="Female" name="Gender" value="Female" />
                <label for="Female">Female</label>&nbsp &nbsp
                <input type="radio" class="form-check-input" id="Other" name="Gender" value="Other" />
                <label for="Other">Other</label>&nbsp<br />
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>

            <div class="col-12">
                <center><input type="submit" class="btn btn-lg btn-dark" value="Submit" /></center>
            </div><hr />
        </form>
    </div>
</div>