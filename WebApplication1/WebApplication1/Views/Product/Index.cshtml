@model List<WebApplication1.Models.Database.Product>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Product List</h2>

    @*<h4>Name: @Model.Name</h4>
        <h4>Username: @Model.Username</h4>
        <h4>Email: @Model.Email</h4>
        <h4>Phone: @Model.Phone</h4>
        <h4>Date Of Birth: @Model.Dob</h4>*@

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th><center>Product ID</center></th>
            <th><center>Product Name</center></th>
            <th><center>Price(৳)</center></th>
            <th><center>Quantity</center></th>
            <th><center>Action</center></th>
        </tr>
    </thead>
    
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Qty</td>
                <td>
                    <a href="/Product/UpdateProduct/@item.PID"><img src="https://img.icons8.com/material-rounded/24/000000/edit--v1.png" /></a>&nbsp;
                    <a href="/Product/DeleteProduct/@item.PID"><img src="https://img.icons8.com/material-outlined/24/000000/filled-trash.png" /></a>&nbsp;&nbsp;
                    <a class="btn btn-outline-info" data-toggle="href" aria-pressed="false" autocomplete="off" href="#">Add To Cart</a>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>