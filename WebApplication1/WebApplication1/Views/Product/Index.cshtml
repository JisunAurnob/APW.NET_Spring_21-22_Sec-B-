@model List<WebApplication1.Models.Database.Product>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Product List</h2>

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th><center>Product ID</center></th>
                <th><center>Product Name</center></th>
                <th><center>Price(৳)</center></th>
                <th><center>Stock</center></th>
                <th><center>Action</center></th>
                <th><center></center></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PID</td>
                    <td>@item.Name</td>
                    <td>@item.Price ৳</td>
                    <td>@item.Qty</td>
                    <td>
                        <a href="/Product/UpdateProduct/@item.PID"><img src="https://img.icons8.com/material-rounded/24/000000/edit--v1.png" /></a>&nbsp;
                        <a href="/Product/DeleteProduct/@item.PID"><img src="https://img.icons8.com/material-outlined/24/000000/filled-trash.png" /></a>&nbsp;&nbsp;
                    </td>
                    <td>
                        <form action="/Product/AddToCart" method="Post">
                            <label>Quantity</label>
                            <input type="hidden" name="PID" value="@item.PID" />
                            <input class="w-0 p-25" style="width:50px" type="number" name="Qty" min="1" max="10" value="1">
                            <input class="btn btn-outline-info" type="submit" value="Add To Cart" />
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>